/* pages/message/message.wxss */

.nav-list {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-around;
}

.nav-list-item {
  /* flex:1; */
  text-align: center;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.6);
  position: relative;
}

.nav-active {
  color: #ec5155;
}

.nav-active:after {
  content: "";
  width: 100%;
  height: 1px;
  background-color: #ec5155;
  position: absolute;
  bottom: 2rpx;
  left: 0;
}

.content {
  width: 100%;
  height: auto;
  background: #fff;
}

.item {
  width: 100%;
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding:0 2.5%;
}

.photoview {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.like-xin {
  width: 24px;
  height: 24px;
}

.item-list {
  display: flex;
  align-items: center;
  font-size: 14px;
  color:#333;
}
