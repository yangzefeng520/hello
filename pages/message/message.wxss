/* pages/message/message.wxss */
.nav-list{
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-around;
}
.nav-list-item{
  /* flex:1; */
  text-align: center;
  font-size:14px;
  color:rgba(0,0,0,0.6);
  position: relative;
}
.nav-active{
  color:#ec5155;
}
.nav-active:after{
  content:"";
  width: 100%;
  height: 1px;
  background-color: #ec5155;
  position:absolute;
  bottom:2rpx;
  left: 0;
}

.content{
  width: 100%;
  height: 500rpx;
  background:#fff;
  padding:15px 2%;
}