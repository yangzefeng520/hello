.header{
  width: 90%;
  height: 65rpx;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  line-height: 65rpx;
  padding: 15rpx 5% 0 5%;
  border-bottom:1px solid #ccc;
  color:#c2c2c2;
}
.header-center{
  font-size: 16px;
  color:#333;
}
.header-right{
  width: 150rpx;
  display: flex;
  justify-content: space-between;
}
.header-fabu{
  color:#e96c68;
}

.title-input{
  width: 100%;
  height: 65rpx;
  border-bottom:1px solid #ccc;
}
.title-input input{
  width: 90%;
  height: 100%;
  line-height: 65rpx;
  color:#333;
  font-size: 14px;
  margin:0 5%;
}

.rich{
  font-size:14px;
  color:#666;
}
.content-focus{
  display: inline-block;
  width: 100%;
  height:50rpx;
}
textarea{
  font-size: 14px;
  color:#666;
  padding:10px;
}