/**index.wxss**/

.banner{
  width: 100%;
  height:380rpx;
}
.banner-box{
  width: 100%;
  height: 100%;
}
image{
  width: 100%;
  height:380rpx;
}

.nav-list{
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-around;
}
.nav-list-item{
  /* flex:1; */
  text-align: center;
  font-size:12px;
  color:rgba(0,0,0,0.6);
  position: relative;
  width: 25%;
}
.nav-active{
  color:#ec5155;
}
.nav-active:after{
  content:"";
  width: 100%;
  height: 1px;
  background-color: #ec5155;
  position:absolute;
  bottom:2rpx;
  left: 0;
}

.one-item{
  padding-top:15rpx;
  background:#fff;
}
.one-item-img{
  width:95%;
  margin-left:2.5%;
  padding:10rpx 0;
}
.one-item-title{
  font-size:18px;
  color:#333;
  text-align:center;
  margin-top:-10rpx;
  border-bottom:1px solid #ebebeb;
}
.one-item-content{
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  justify-content: space-between;
  padding:0 40rpx;
  font-size: 12px;
  color: #333;
}
.item-like{
  width: 140rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.xin{
  width: 20px;
  height: 20px;
  background-image: url("http://h5.lwest.cn/we7/addons/lwx_helloting/template/mobile/public/images/common_btn_like_s.png");
  background-size: 100%;
}
.meg{
  width: 20px;
  height: 20px;
  background-image: url("http://h5.lwest.cn/we7/addons/lwx_helloting/template/mobile/public/images/comment.png");
  background-size: 100%;
}